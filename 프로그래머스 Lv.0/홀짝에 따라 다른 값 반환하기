import Foundation

func solution(_ n:Int) -> Int {
    var result: Int = 0
    
    if n%2 == 0 {
        
        var i: Int = 0
        while i <= n {
            
            result += i*i
            i += 2
            
        }
        
    } else {
        
        var i: Int = 1
        while i <= n {
            
            result += i
            i += 2
            
        }
        
    }
    
    return result
}
